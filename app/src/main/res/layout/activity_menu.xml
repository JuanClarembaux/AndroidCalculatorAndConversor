<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHeight_percent="0.15"
    app:layout_constraintWidth_percent="0.15"
    android:background="@color/teal_700"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/gatitoIMG"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:contentDescription="@string/imagengatito"
        android:src="@drawable/gatito_img"
        app:layout_constraintEnd_toStartOf="@+id/guiaDerecha"
        app:layout_constraintStart_toStartOf="@+id/guiaIzquierda"
        app:layout_constraintTop_toTopOf="@+id/guiaSuperior"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/sumaActivity_bt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="@string/sumaActivity_bt"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/gatitoIMG"
        app:layout_constraintStart_toStartOf="@+id/gatitoIMG"
        app:layout_constraintTop_toBottomOf="@+id/gatitoIMG" />

    <Button
        android:id="@+id/ConversorActivity_bt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/ConversorActivity_bt"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/sumaActivity_bt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sumaActivity_bt"
        app:layout_constraintTop_toBottomOf="@+id/sumaActivity_bt" />

    <Button
        android:id="@+id/ContactActivity_bt"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/ContactActivity_bt"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ConversorActivity_bt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ConversorActivity_bt"
        app:layout_constraintTop_toBottomOf="@+id/ConversorActivity_bt" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaInferior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaSuperior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>