<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_700"
    tools:context=".ThirdActivity">

    <ImageView
        app:layout_constraintEnd_toEndOf="@id/guiaDerecha"
        app:layout_constraintStart_toStartOf="@+id/guiaIzquierda"
        app:layout_constraintTop_toTopOf="@id/guiaSuperior"
        app:layout_goneMarginTop="25dp"
        android:id="@+id/gatitoIMG"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/imagengatito"
        android:src="@drawable/gatito_img"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/conversorMonedasText"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/gatitoIMG"
        app:layout_constraintStart_toStartOf="@+id/gatitoIMG"
        app:layout_constraintEnd_toEndOf="@id/gatitoIMG"
        android:layout_marginTop="25dp"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@id/textView"
        android:layout_marginTop="25dp"
        android:id="@+id/ingreseMonto_et"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:hint="@string/ingresarMontoPesosText"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="#5E35B1"
        android:textSize="20sp"
        tools:ignore="SpeakableTextPresentCheck"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/ingreseMonto_et"
        app:layout_constraintStart_toStartOf="@+id/ingreseMonto_et"
        app:layout_constraintEnd_toEndOf="@id/ingreseMonto_et"
        android:layout_marginTop="25dp"
        android:id="@+id/textView2"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/seleccioneMonedaText"
        android:textSize="20sp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@+id/dolar_rbt"
        android:layout_marginTop="25dp"
        android:layout_marginStart="5dp"
        android:id="@+id/dolar_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/dolar_eeuu_Text"
        android:textSize="20sp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/dolar_tv"
        app:layout_constraintStart_toEndOf="@+id/real_rbt"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:id="@+id/real_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/real_br_Text"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="483dp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/real_tv"
        app:layout_constraintStart_toEndOf="@+id/euro_rbt"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:id="@+id/euro_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/euroText"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="529dp" />

    <RadioButton
        app:layout_constraintStart_toEndOf="@id/guiaIzquierda"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:id="@+id/dolar_rbt"
        android:layout_width="31dp"
        android:layout_height="42dp"
        tools:ignore="DuplicateSpeakableTextCheck,DuplicateSpeakableTextCheck" />

    <RadioButton
        app:layout_constraintStart_toEndOf="@id/guiaIzquierda"
        app:layout_constraintTop_toBottomOf="@+id/dolar_rbt"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:id="@+id/real_rbt"
        android:layout_width="31dp"
        android:layout_height="43dp"
        android:layout_gravity="center" />

    <RadioButton
        app:layout_constraintStart_toEndOf="@id/guiaIzquierda"
        app:layout_constraintTop_toBottomOf="@+id/real_rbt"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:id="@+id/euro_rbt"
        android:layout_width="32dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/guiaIzquierda"
        app:layout_constraintEnd_toEndOf="@id/guiaDerecha"
        app:layout_constraintBottom_toBottomOf="@id/guiaInferior"
        android:layout_marginBottom="65dp"
        android:id="@+id/resultadoMonto_et"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="@string/resultadoText"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="#5E35B1"
        android:textSize="22sp"
        tools:layout_editor_absoluteY="590dp" />

    <Button
        app:layout_constraintStart_toStartOf="@id/guiaIzquierda"
        app:layout_constraintBottom_toBottomOf="@id/guiaInferior"
        android:layout_marginEnd="5dp"
        android:id="@+id/convertir_bt"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:text="@string/convertir_bt"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/reiniciar_bt"/>
    <Button
        app:layout_constraintEnd_toEndOf="@id/guiaDerecha"
        app:layout_constraintBottom_toBottomOf="@id/guiaInferior"
        android:layout_marginEnd="5dp"
        android:id="@+id/reiniciar_bt"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/reiniciar_bt"
        android:textSize="18sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaInferior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaSuperior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />
</androidx.constraintlayout.widget.ConstraintLayout>