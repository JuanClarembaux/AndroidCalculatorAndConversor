<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_700"
    tools:context=".SecondActivity">

    <ImageView
        app:layout_constraintEnd_toStartOf="@+id/guiaDerecha"
        app:layout_constraintStart_toStartOf="@+id/guiaIzquierda"
        app:layout_constraintTop_toTopOf="@+id/guiaSuperior"
        android:layout_marginTop="40dp"
        android:id="@+id/gatitoIMG"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/gatito_img" />

    <EditText
        app:layout_constraintEnd_toEndOf="@+id/gatitoIMG"
        app:layout_constraintStart_toStartOf="@+id/gatitoIMG"
        app:layout_constraintTop_toBottomOf="@+id/gatitoIMG"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="number"
        android:minWidth="48dp"
        android:text="O"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:ignore="SpeakableTextPresentCheck"
        android:background="@color/white"/>


    <Button
        android:id="@+id/sumar_bt"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/sumar_bt"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/zoomPositivo_bt"
        app:layout_constraintStart_toStartOf="@+id/guiaIzquierda"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="7dp"
        />

    <Button
        android:id="@+id/restar_bt"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/restar_bt"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/zoomNegativo_bt"
        app:layout_constraintEnd_toStartOf="@+id/guiaDerecha"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="7dp"
        />


    <Button
        android:id="@+id/zoomPositivo_bt"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/zoomPositivo_bt"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/resetear_bt"
        app:layout_constraintStart_toStartOf="@+id/guiaIzquierda"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="7dp"
        />

    <Button
        android:id="@+id/zoomNegativo_bt"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/zoomNegativo_bt"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/ocultar_bt"
        app:layout_constraintEnd_toStartOf="@+id/guiaDerecha"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="7dp"
        />

    <Button
        android:id="@+id/resetear_bt"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/resetear_bt"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/guiaInferior"
        app:layout_constraintStart_toStartOf="@+id/guiaIzquierda"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="7dp"
        />

    <Button
        app:layout_constraintBottom_toTopOf="@+id/guiaInferior"
        app:layout_constraintEnd_toStartOf="@+id/guiaDerecha"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="7dp"
        android:id="@+id/ocultar_bt"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/ocultar_bt"
        android:textSize="18dp"
        />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guiaInferior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guiaSuperior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guiaIzquierda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guiaDerecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />
</androidx.constraintlayout.widget.ConstraintLayout>